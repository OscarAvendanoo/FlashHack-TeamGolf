@model FlashHackForum.ViewModels.RegistrationViewModel

@{
    ViewData["Title"] = "Registrering";
}

<h2>Registrering</h2>

<form asp-action="Registration" method="post">
    @Html.AntiForgeryToken()

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Förnamn</label>
        <input asp-for="FirstName" class="form-control" required />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Efternamn</label>
        <input asp-for="LastName" class="form-control" required />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Användarnamn</label>
        <input asp-for="UserName" class="form-control" required />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">E-post</label>
        <input asp-for="Email" type="email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Lösenord</label>
        <input asp-for="Password" type="password" class="form-control" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Bekräfta lösenord</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <hr />
    <h4>Konto Information</h4>

    <div class="mb-3">
        <label class="form-label">Biografi</label>
        <textarea asp-for="Biography" class="form-control"></textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Telefonnummer</label>
        <input asp-for="PhoneNumber" type="tel" class="form-control" required />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Visningsnamn</label>
        <input asp-for="DisplayName" class="form-control" required />
        <span asp-validation-for="DisplayName" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsPremium" class="form-check-input" type="checkbox" />
        <label class="form-check-label">Premium Medlemskap</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Registrera</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
